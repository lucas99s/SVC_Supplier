@{
    ViewData["Title"] = "Pedidos";
}

@model List<ProductModel>

<div>
    
    @foreach (var product in Model)
    {
        <form asp-action="Product" class="product-card-area">
            <button class="product-card">
                <input type="hidden" value="@product.Id" name="productId">
                <img class="product-card-image-area" src="@product.ImagePath" />
                <div class="product-card-information-area">
                    <h2>@product.Name</h2>
                    <h3>@product.Brand</h3>

                    <div class="avaliation-subarea">

                        <p>Avaliações</p>
                        <div>
                            <img class="star-icon" src="/images/star-icon.svg" />
                            <img class="star-icon" src="/images/star-icon.svg" />
                            <img class="star-icon" src="/images/star-icon.svg" />
                            <img class="star-icon" src="/images/star-icon.svg" />
                            <img class="star-icon" src="/images/star-icon.svg" />
                        </div>

                    </div>

                    <p class="sold-units">@product.SoldUnits Unidades vendidas</p>

                    <div class="price-area">
                        <p class="pricing">R$</p>
                        <p class="pricing">@product.Price</p>
                        <p class="lot-text">/lotes: @product.UnitsInLot unidades</p>
                    </div>
                </div>

            </button>

        </form>
    }

    <section class="finished-orders">
        <h1>Pedidos Pendentes</h1>
        <p>Nenhum registro encontrado</p>
    </section>

    <section class="finished-orders">
        <h1>Pedidos Encerrados</h1>
        <p>Nenhum registro encontrado</p>
    </section>
</div>
@{
    ViewData["Title"] = "Home Page";
}

<a class="back-arrow"><img class="arrow-image" src="/images/back-icon.png"> Voltar</a>

<div>
    <section class="banner-area">

        <h1 class="banner-area-title">Olá,<br /> como podemos<br /> te ajudar?</h1>
        <form asp-controller="Products" asp-action="Index" class="search-bar-form">
            <input class="search-bar" type="text" name="searchString" placeholder="Buscar..." value="@ViewBag.SearchBar">
            <input class="search-bar-button" type="submit" value="Pesquisar" />
        </form>

    </section>

    <section class="option-card-area">

        <h1>Mais buscados:</h1>

        <div class="option-cards-row">
            <a href="@Url.Action("Index", "Products", new { searchString = "Materiais de construção" })" class="option-card">
                <img class="option-icon" src="/images/wheelbarrow-icon.png"/>
                <p1>Materiais de construção</p1>
            </a>

            <a href="@Url.Action("Index", "Products", new { searchString = "Informática" })" class="option-card">
                <img class="option-icon" src="/images/computer-icon.png" />
                <p1>Informática</p1>
            </a>
        </div>

        <div class="option-cards-row">
            <a href="@Url.Action("Index", "Products", new { searchString = "Mecânica" })" class="option-card">
                <img class="option-icon" src="/images/car-icon.png" />
                <p1>Mecânica</p1>
            </a>

            <a href="@Url.Action("Index", "Products", new { searchString = "Cosméticos" })" class="option-card">
                <img class="option-icon" src="/images/hairdresser-icon.png" />
                <p1>Cosméticos</p1>
            </a>
        </div>
        
    </section>
</div>
